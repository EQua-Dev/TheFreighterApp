<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_mini">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_mini"
        android:text="@string/tv_enter_complaint_details"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="@dimen/text_xl"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_complaint_user_type"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_mini"
        android:hint="@string/enter_complaint_user_type"
        android:padding="@dimen/padding_mini">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/et_complaint_user_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/enter_complaint_user_type"
            android:importantForAutofill="no"
            android:inputType="none"
            android:labelFor="@id/et_complaint_user_type" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_complaint_dispatch"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_mini"
        android:hint="@string/enter_complaint_dispatch"
        android:padding="@dimen/padding_mini">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/et_complaint_dispatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/enter_complaint_dispatch"
            android:importantForAutofill="no"
            android:inputType="none"
            android:labelFor="@id/et_complaint_user_type" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_complaint_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_mini"
        android:layout_marginEnd="@dimen/padding_mini"
        android:hint="@string/enter_complaint_text"
        android:padding="@dimen/padding_mini">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_complaint_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:contentDescription="@string/enter_complaint_text"
            android:maxLines="4"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"

            android:labelFor="@id/et_complaint_user_type" />
    </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_mini"
    android:weightSum="2">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel_complaint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_midi"
        android:layout_marginTop="@dimen/margin_midi"
        android:layout_marginEnd="@dimen/margin_midi"
        android:layout_marginBottom="@dimen/margin_midi"
        android:backgroundTint="@color/primary"
        android:padding="@dimen/padding_mini"
        android:text="@string/btn_cancel_complaint"
        app:cornerRadius="@dimen/margin_mini" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_complaint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_midi"
        android:layout_marginTop="@dimen/margin_midi"
        android:layout_marginEnd="@dimen/margin_midi"
        android:layout_marginBottom="@dimen/margin_midi"
        android:backgroundTint="@color/primary"
        android:padding="@dimen/padding_mini"
        android:text="@string/btn_submit_complaint"
        app:cornerRadius="@dimen/margin_mini" />

</LinearLayout>

</LinearLayout>